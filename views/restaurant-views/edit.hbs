<div class="container my-4">
  <h4 class="text-center mt-5 mb-3">Update restaurant</h4>
  <div class="d-flex justify-content-center align-items-center">
    <div class="card p-3" style="width:40rem">
      <form action="/restaurants/update/{{restaurant._id}}" method="post">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="restaurantName" class="form-label">Restaurant name</label>
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">
                  <i class="fa-solid fa-utensils"></i>
                </span>
                <input
                  type="text"
                  class="form-control"
                  name="title"
                  id="restaurantName"
                  value="{{restaurant.title}}"
                  required
                />
              </div>
            </div>

          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="phoneNumber" class="form-label">Phone</label>
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">
                  <i class="fa-solid fa-phone"></i>
                </span>
                <input
                  type="text"
                  class="form-control"
                  name="phoneNumber"
                  id="phoneNumber"
                  value="{{restaurant.phoneNumber}}"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="mb-0">Food Type</label>
          <hr class="my-1" />
          <div class="row mt-2">
            <div class="col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Fancy"
                  name="foodTypes"
                  id="Fancy"
                  {{isChecked "Fancy" restaurant.foodTypes}}
                />
                <label class="form-check-label" for="Fancy">
                  Fancy
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="General"
                  name="foodTypes"
                  id="General"
                  {{isChecked "General" restaurant.foodTypes}}

                />
                <label class="form-check-label" for="General">
                  General
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Fast"
                  name="foodTypes"
                  {{isChecked "Fast" restaurant.foodTypes}}
                  id="Fast"
                />
                <label class="form-check-label" for="Fast">
                  Fast Food
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Take-Out"
                  name="foodTypes"
                  id="Take-Out"
                  {{isChecked "Take-Out" restaurant.foodTypes}}

                />
                <label class="form-check-label" for="Take-Out">
                  Take-Out
                </label>
              </div>
            </div>
          </div>

        </div>
        <div class="mb-3">
          <label for="address" class="form-label mb-0">Address</label>
          <hr class="my-1" />
          <div class="row">
            <div class="col-md-6 mb-2 mt-2">
              <div class="form-group">
                <label for="street">Street Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="street"
                  name="street"
                  placeholder="123 Main St"
                    value="{{restaurant.address.street}}"
                  required
                />
              </div>
            </div>
            <div class="col-md-6 mb-2 mt-2">
              <div class="form-group">
                <label for="city">City</label>
                <input
                  type="text"
                  class="form-control"
                  id="city"
                  name="city"
                  placeholder="San Francisco"
                    value="{{restaurant.address.city}}"
                  required
                />
              </div>
            </div>
            <div class="col-md-6 mb-2">
              <div class="form-group">
                <label for="state">State</label>
                <input
                  type="text"
                  class="form-control"
                  id="state"
                  name="state"
                  placeholder="California"
                  value="{{restaurant.address.state}}"
                  required
                />
              </div>
            </div>
            <div class="col-md-6 mb-2">
              <div class="form-group">
                <label for="zip">Zip Code</label>
                <input
                  type="number"
                  class="form-control"
                  id="zip"
                  name="zip"
                  placeholder="94105"
                  value="{{restaurant.address.zip}}"
                  required
                />
              </div>
            </div>
            <div class="col-12 my-2">
              <a
                class="text-underline text-primary"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
                style="cursor:pointer"
              >Select location</a>
            </div>
            <div class="col-md-6 mb-2">
              <div class="form-group">
                <label for="latitude">Latitude</label>
                <input
                  type="number"
                  class="form-control"
                  id="latitude"
                  name="latitude"
                  placeholder="latitude"
                  value="{{restaurant.location.lat}}"
                  required
                  readonly
                />
              </div>
            </div>
            <div class="col-md-6 mb-2">
              <div class="form-group">
                <label for="longitude">Longitude</label>
                <input
                  type="number"
                  class="form-control"
                  id="longitude"
                  name="longitude"
                  placeholder="longitude"
                  value="{{restaurant.location.lng}}"
                  required
                  readonly
                />
              </div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="">Website
            <span class="text-muted">(Optional)</span></label>
          <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">
              <i class="fa-solid fa-globe"></i>
            </span>
            <input
              type="url"
              class="form-control"
              name="website"
              placeholder="https://www.example.com"
              value="{{restaurant.website}}"
            />
          </div>
        </div>

        <div class="d-grid gap-2">
          <button class="btn btn-block btn-primary">Update Restaurant</button>
        </div>
      </form>
    </div>
  </div>
  
</div>



<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Select Location</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div id="selection-map" style="min-height:300px"></div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <button
          type="button"
          class="btn btn-primary"
          data-bs-dismiss="modal"
        >Save Location</button>
      </div>
    </div>
  </div>
</div>