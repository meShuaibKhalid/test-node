<div class="container my-5">
     <div class="row my-5">
    {{#if restaurants}}
    <h4>SmartCycle Restaurants</h4>
    {{/if}}
    {{#each restaurants}}
      <div class="col-md-4">
        <div class="card p-3 mb-3" style="min-height:220px">
          <p><b>Name: </b>{{this.title}}</p>
          <p><b>Phone: </b>{{this.phoneNumber}}</p>
          <p><b>Food Type: </b>
            {{#each this.foodTypes}}
              {{this}},
            {{/each}}
          </p>
          <p><b>Address: </b>{{this.address.street}},
            {{this.address.city}},
            {{this.address.state}}
            {{this.address.zip}}</p>
          <div>
            <a href="/restaurants/details/{{this._id}}"><button
                class="btn btn-primary"
              >View</button></a>
              <a href="/restaurants/edit/{{this._id}}"><button
                class="btn btn-primary"
              >Edit</button></a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>