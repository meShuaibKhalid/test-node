<div class="container mt-4">
  <div class="row">
    <h4 class="text-center mb-3">Request details</h4>
    <div class="col-12">
      <p><b>Request Info: </b> {{shelter.message}} </p>
      <p><b>Description: </b> {{shelter.description}} </p>
      <p><b>Phone Number: </b> {{shelter.phoneNumber}} </p>
      <p><b>Food Type: </b>
        {{#each shelter.foodTypes}}
          {{this}},
        {{/each}}
      </p>
      <p><b>Address: </b>
        {{shelter.address.street}},
        {{shelter.address.city}},
        {{shelter.address.state}}
        {{shelter.address.zip}}
      </p>
      <p><b>Created At:</b> {{shelter.createdAt}} </p>
    </div>
    <button class="btn btn-primary" onclick="history.back()">Go Back</button>
  </div>
</div>